<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/horizontal_padding_rv_subtasks"
        android:paddingRight="@dimen/horizontal_padding_rv_subtasks">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/vertical_padding_rv_subtasks">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of subtasks"
                android:textAllCaps="true"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/addSubtaskBtn"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_add" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilSubtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ll2"
            android:textColorHint="#BDBDBD"
            android:visibility="gone">

            <EditText
                android:id="@+id/etSubtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:hint="Title"
                android:inputType="textCapSentences|textNoSuggestions"
                android:maxLines="1"
                android:textColor="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSubtasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tilSubtask" />

    </RelativeLayout>

</RelativeLayout>